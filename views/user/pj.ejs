    <div id="myJourneyList" class="grid-container"></div>

    <script>
  var uname = '<%- JSON.stringify(uname) %>'
      var upassword = '<%- JSON.stringify(upassword) %>'
      var uid = '<%- JSON.stringify(uid) %>'
      //===========  LeafLet INITIALIZATION ======================
        const mumbaiLatLong = [19.0760, 72.8777]
        const focusZoom = 16
        const mymap = L.map('myMap').setView(mumbaiLatLong, focusZoom);
        const attribution =
        '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors';

        const tileUrl = 'https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png'; 
        const tiles = L.tileLayer(tileUrl, { attribution });
        tiles.addTo(mymap);
      //===========  END =========================================


      //========= ADD Journey List ====================
      let lineList = {};

        function pjContent(element){
          
          content = `
              <b>JourneyID:</b>   ${element['id']}     <button class="focus" style="float: right;"> Focus </button> <br>
              <b>CarID:</b>       ${element['car_id']}      <br>
              <b>StartTime :</b>  ${element['start_time']}   <br>
              <b>EndTime:</b>     ${element['end_time']} <br>
              `;
          element['tags'].split(',').forEach(kv => {
            kv = kv.split('=>');
            k = kv[0].replace(/['"]+/g, '');
            v = kv[1].replace(/['"]+/g, '');
            if(parseFloat(v)){
              v = parseFloat(v).toFixed(2);
            }

            content += `<b> ${k}: </b> ${v}`
            if(k=='avg_speed'){
              content += ' km/h';
            }
            if(k==' fuel_consumed'){
              content += ' L';
            }
            content += '<br>'
          })
          return content;
        }
var a;
        function addPj(element){
          var div = document.createElement('div');
          div.setAttribute('id', `pj_${element['id']}`);
          div.setAttribute('class', 'card');
          div.innerHTML = `
          <div class="grid-item">
            <div class="card">
              <div class="container">
                <p class="pj_content">
                  ${pjContent(element)}
                </p>
              </div>
            </div>
          </div>
          `;

          var r = Math.floor(Math.random() * 255);
          var g = Math.floor(Math.random() * 255);
          var b = Math.floor(Math.random() * 255);
          
          lineList[element['id']] = L.polyline(
                  JSON.parse(element['track'])['coordinates']
                ).setStyle(
                      {
                        color: "rgb("+r+","+g+","+b+")",
                        weight: 5,
                        smoothFactor: 1
                      }
                ).addTo(mymap);

          a = lineList[element['id']]
          div.getElementsByClassName("focus")[0].addEventListener("click", () => {
            var sp = element['start_point'];
            sp = sp.substr(6, sp.length-7).split(" ");
            mymap.panTo([parseFloat(sp[0]), parseFloat(sp[1])], focusZoom);
          })
          document.getElementById('myJourneyList').appendChild(div);
        }

        fetch("http://localhost:3000/api/pj", {
          method: 'post',
          headers: {'Content-Type': 'application/json'},
          body: JSON.stringify({"uname": uname, "upassword": upassword, "uid": uid})
        }).then(res => {
            res.json().then(data => {
              data.rows.forEach(element => {
                addPj(element);
                
                // L.polylineDecorator(pl, {
                //         patterns: [
                //             {offset: 0, repeat: 50, symbol: L.Symbol.arrowHead(
                //               {pixelSize: 8, polygon: false, 
                //                 pathOptions: {stroke: true}}
                //                 )
                //             }
                //             ]
                //     }).addTo(mymap)
              });
            });
          })
          .catch(error => {
              console.error('Fetch Error:', error)
          })

      //============= END ========================


      //======== UPDATE LOOP ================================
        function updatePj(element){
          var div = document.getElementById(`pj_${element['id']}`);
          if(div){
            lineList[element['id']].setLatLngs(JSON.parse(element['track'])['coordinates'])
            div.getElementsByClassName("pj_content")[0].innerHTML = pjContent(element)
            div.getElementsByClassName("focus")[0].addEventListener("click", () => {
              var sp = element['start_point'];
              sp = sp.substr(6, sp.length-7).split(" ");
              mymap.panTo([parseFloat(sp[0]), parseFloat(sp[1])], focusZoom);
            })
          }
          else{
            addPj(element);
          }
        }
        
        async function updatePjs(){
          console.log("again this!")
